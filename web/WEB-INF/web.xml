    <servlet-mapping>
        <servlet-name>GuardarUsuarioServlet</servlet-name>
        <url-pattern>/GuardarUsuarioServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarServlet</servlet-name>
        <url-pattern>/ActualizarServlet</url-pattern>
    </servlet-mapping>
