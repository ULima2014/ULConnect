        <servlet-class>pe.edu.ulima.ulconnect.OtrosServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>BuscarServlet</servlet-name>
        <servlet-class>pe.edu.ulima.ulconnect.AgregarAmigosServlet</servlet-class>
