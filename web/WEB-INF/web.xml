    <servlet>
        <servlet-name>BuscarAmigoServlet</servlet-name>
        <servlet-class>pe.edu.ulima.ulconnect.BuscarAmigoServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MostrarRegistroServlet</servlet-name>
        <url-pattern>/MostrarRegistroServlet</url-pattern>
