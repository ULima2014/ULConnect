        <servlet-name>AmigosServlet</servlet-name>
        <url-pattern>/AmigosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>OtrosServlet</servlet-name>
        <url-pattern>/OtrosServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarServlet</servlet-name>
        <url-pattern>/BuscarServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>BuscarAmigoServlet</servlet-name>
        <url-pattern>/BuscarAmigoServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
